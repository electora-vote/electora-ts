{
  "name": "electora-ts",
  "version": "1.0.1",
  "description": "",
  "keywords": [],
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electora-vote/electora-ts.git"
  },
  "bugs": {
    "url": "https://github.com/electora-vote/electora-ts/issues"
  },
  "homepage": "https://github.com/electora-vote/electora-ts#readme",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "test": "run-s build test:*",
    "test:lint": "eslint src test --ext .ts",
    "test:unit": "jest --detectOpenHandles --forceExit --runInBand",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --out build/docs",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test doc:html doc:publish"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-typescript": "^7.21.5",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "babel-jest": "^29.5.0",
    "commitizen": "^4.3.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "npm-dts": "^1.3.12",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "@bundlr-network/client": "^0.11.2",
    "@nucypher/nucypher-ts": "0.10.0",
    "@sismo-core/sismo-connect-client": "^0.0.11"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}